<script>
    document.addEventListener('DOMContentLoaded', () => {
        // Get chatId from URL
        const pathParts = window.location.pathname.split('/');
        const chatId = pathParts[pathParts.length - 1] || null;

        const chatForm = document.getElementById('chat-form');
        const messageInput = document.getElementById('message-input');
        let fileInput = document.getElementById('file-input');
        const uploadBtn = document.getElementById('upload-btn');
        const fileIndicator = document.getElementById('file-indicator');
        const chatMessages = document.getElementById('chat-messages');
        const submitBtn = document.getElementById('submit-btn');
        const filePreview = document.getElementById('file-preview');
        const fileName = document.getElementById('file-name');
        const removeFileBtn = document.getElementById('remove-file');

        // Auto-resize textarea
        messageInput.addEventListener('input', function () {
            this.style.height = '';
            this.style.height = Math.min(this.scrollHeight, 150) + 'px';
        });

        // Validate file type on selection
        fileInput.addEventListener('change', (e) => {
            const file = e.target.files[0];
            if (file && !file.type.startsWith('image/')) {
                alert('Only image files are allowed. Please select an image file.');
                clearFileInput();
                return;
            }
            handleFileSelect();
        });

        // Auto-resize textarea on load
        if (messageInput.scrollHeight > 0) {
            messageInput.style.height = messageInput.scrollHeight + 'px';
        }

        // Load existing messages if chatId exists
        if (chatId && typeof messages !== 'undefined' && messages && messages.length > 0) {
            messages.forEach(msg => {
                const file = msg.imageUrl ? { type: 'image', url: msg.imageUrl } : null;
                appendMessage(msg.role, msg.content, file, false);
            });
        } else if (chatId) {
            // Try to load messages from API
            loadChatHistory(chatId);
        }

        // Handle image expansion via delegation
        chatMessages.addEventListener('click', (e) => {
            if (e.target.classList.contains('img-expandable')) {
                e.target.classList.toggle('max-w-full');
                e.target.classList.toggle('max-w-[250px]');
                e.target.classList.toggle('md:max-w-sm');
            }
        });

        // Handle File Upload Button
        uploadBtn.addEventListener('click', () => fileInput.click());


        // Handle file removal
        removeFileBtn?.addEventListener('click', clearFileInput);

        // Handle paste event for images
        messageInput.addEventListener('paste', (e) => {
            const items = (e.clipboardData || window.clipboardData).items;
            for (let i = 0; i < items.length; i++) {
                if (items[i].type.indexOf('image') !== -1) {
                    const file = items[i].getAsFile();
                    if (file) {
                        // Clear any existing file
                        clearFileInput();

                        // Create a new FileList with the pasted file
                        const dataTransfer = new DataTransfer();
                        dataTransfer.items.add(file);
                        fileInput.files = dataTransfer.files;

                        // Update UI
                        handleFileSelect();

                        // Focus back on the input
                        messageInput.focus();

                        e.preventDefault();
                        return;
                    }
                }
            }
        });

        function handleFileSelect() {
            if (fileInput.files.length > 0) {
                const file = fileInput.files[0];
                // Validate it's an image
                if (!file.type.startsWith('image/')) {
                    alert('Only image files are allowed. Please select an image file.');
                    clearFileInput();
                    return;
                }
                fileIndicator.classList.remove('hidden');
                uploadBtn.classList.add('text-pink-accent');

                // Show file preview
                filePreview.classList.remove('hidden');
                fileName.textContent = file.name;

                // Auto-scroll to bottom when file is selected
                setTimeout(() => {
                    chatMessages.scrollTop = chatMessages.scrollHeight;
                }, 100);
            } else {
                clearFileInput();
            }
        }

        // Load chat history from API
        async function loadChatHistory(chatId) {
            try {
                const response = await fetch(`/api/chat/${chatId}/messages`);
                const data = await response.json();
                if (data.success && data.messages && data.messages.length > 0) {
                    // Clear intro message
                    const introMsg = chatMessages.querySelector('.max-w-3xl.mx-auto.text-center');
                    if (introMsg) introMsg.remove();

                    data.messages.forEach(msg => {
                        const file = msg.imageUrl ? { type: 'image', url: msg.imageUrl } : null;
                        appendMessage(msg.role, msg.content, file, false);
                    });
                }
            } catch (error) {
                console.error('Error loading chat history:', error);
            }
        }

        function clearFileInput() {
            fileInput.value = '';
            fileIndicator.classList.add('hidden');
            uploadBtn.classList.remove('text-pink-accent');
            filePreview.classList.add('hidden');
        }

        // Handle Form Submit
        chatForm.addEventListener('submit', async (e) => {
            e.preventDefault();
            console.log('Form submitted');

            const text = messageInput.value.trim();
            const file = fileInput.files[0];

            if (!text && !file) {
                console.log('No text or file provided');
                messageInput.classList.add('animate-shake');
                setTimeout(() => messageInput.classList.remove('animate-shake'), 500);
                return;
            }

            try {
                // Show user message immediately
                appendMessage('user', text, file);

                // Clear input but keep the file if it exists
                messageInput.value = '';
                messageInput.style.height = 'auto';
                submitBtn.disabled = true;

                // Show loading indicator with thinking updates
                const thinkingId = appendThinking();
                startThinkingCycler();

                // Create form data
                const formData = new FormData();
                if (text) formData.append('text', text);
                if (file) {
                    // Validate file type
                    if (!file.type.startsWith('image/')) {
                        removeThinking(thinkingId);
                        alert('Only image files are allowed. Please select an image file.');
                        clearFileInput();
                        submitBtn.disabled = false;
                        return;
                    }
                    formData.append('image', file);
                    console.log('File attached to message', { fileName: file.name, fileSize: file.size });
                }

                if (!chatId) {
                    removeThinking(thinkingId);
                    alert('Chat ID is missing. Please refresh the page.');
                    submitBtn.disabled = false;
                    return;
                }

                console.log('Sending request to /api/chat/' + chatId);
                const response = await fetch(`/api/chat/${chatId}`, {
                    method: 'POST',
                    body: formData,
                });

                console.log('Response status:', response.status);

                if (response.status === 401) {
                    // Not authenticated - redirect to login
                    const data = await response.json();
                    if (data.redirect) {
                        window.location.href = data.redirect;
                        return;
                    }
                }

                if (!response.ok) {
                    const errorData = await response.json().catch(() => ({}));
                    throw new Error(errorData.error || `HTTP error! status: ${response.status}`);
                }

                const data = await response.json();
                console.log('Received response data', { thinkingSteps: data.thinking?.length });

                // Remove thinking indicator
                removeThinking(thinkingId);
                stopThinkingCycler();

                // Show final thinking update from backend if available
                if (data.thinking && data.thinking.length > 0) {
                    updateThinking(data.thinking[data.thinking.length - 1]);
                }

                if (data && data.result) {
                    appendMessage('ai', data.result);
                } else {
                    console.error('Unexpected response format:', data);
                    appendMessage('ai', 'Received an unexpected response format from the server.');
                }

            } catch (error) {
                console.error('Error in form submission', { error: error.message, stack: error.stack });
                stopThinkingCycler();
                const thinkingEl = document.getElementById('thinking-indicator');
                if (thinkingEl) removeThinking('thinking-indicator');

                let errorMessage = 'Error: ';
                if (error.message.includes('Failed to fetch')) {
                    errorMessage += 'Could not connect to the server. Please check your internet connection.';
                } else if (error.message.includes('NetworkError')) {
                    errorMessage += 'Network error. Please try again later.';
                } else if (error.message.includes('Only image files')) {
                    errorMessage = error.message;
                    alert(errorMessage);
                } else {
                    errorMessage += error.message || 'An unknown error occurred.';
                }

                if (!error.message.includes('Only image files')) {
                    appendMessage('ai', errorMessage);
                }
            } finally {
                // Clear file input and reset UI
                fileInput.value = '';
                filePreview.classList.add('hidden');
                fileIndicator.classList.add('hidden');
                uploadBtn.classList.remove('text-pink-accent');
                submitBtn.disabled = false;

                // Scroll to bottom of chat
                chatMessages.scrollTop = chatMessages.scrollHeight;
            }
        });
        function appendMessage(role, text, file = null, scroll = true) {
            const messageDiv = document.createElement('div');
            messageDiv.className = `max-w-3xl mx-auto flex gap-4 px-2 md:px-0 message-enter ${role === 'user' ? 'flex-row-reverse user' : ''}`;

            const timestamp = new Date().toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' });
            let contentHtml = '';

            if (file) {
                // Handle both File objects and URL strings
                const isFileObject = file instanceof File || (file.type && file.name);
                const imageUrl = isFileObject ? URL.createObjectURL(file) : (file.url || file);

                if (isFileObject ? file.type.startsWith('image/') : true) {
                    contentHtml += `
                        <div class="relative group mb-2">
                            <div class="relative overflow-hidden rounded-lg border border-white/8 hover:border-white/15 transition-colors">
                                <img src="${imageUrl}" class="max-w-[250px] md:max-w-sm rounded-lg cursor-pointer img-expandable" 
                                     alt="Uploaded content">
                                <div class="absolute inset-0 bg-black/40 opacity-0 group-hover:opacity-100 flex items-end justify-center pb-2 rounded-lg transition-opacity">
                                    <span class="text-white text-xs bg-black/80 px-2.5 py-1 rounded-md">Click to expand</span>
                                </div>
                            </div>
                        </div>`;
                }
            }

            if (text) {
                try {
                    const htmlContent = marked.parse(text);
                    contentHtml += `
                        <div class="prose prose-invert prose-sm max-w-none prose-p:leading-relaxed prose-headings:font-display prose-headings:font-semibold prose-strong:text-pink-accent/80 prose-li:text-zinc-300 pointer-events-auto select-text">
                            ${htmlContent}
                        </div>`;
                } catch (e) {
                    console.error('Error parsing markdown:', e);
                    contentHtml += `<div class="whitespace-pre-wrap break-words">${text}</div>`;
                }
            }

            messageDiv.innerHTML = `
                <div class="flex-shrink-0 w-8 h-8 rounded-lg ${role === 'user' ? 'bg-zinc-700 border border-zinc-600' : 'bg-pink-accent/12 border border-pink-accent/20'} flex items-center justify-center">
                    <i data-lucide="${role === 'user' ? 'user' : 'bot'}" class="w-4 h-4 ${role === 'user' ? 'text-zinc-300' : 'text-pink-accent'}"></i>
                </div>
                <div class="message-content flex-1 ${role === 'user' ? 'items-end' : ''}">
                    <div class="glass px-4 py-3 rounded-lg ${role === 'user' ? 'rounded-tr-none bg-zinc-800/50 border-zinc-700/50' : 'rounded-tl-none border-white/8'} border text-zinc-300 leading-relaxed message-bubble">
                        ${contentHtml || '<div class="text-sm text-zinc-400">Sent a file</div>'}
                    </div>
                    <div class="text-xs text-zinc-500 mt-1.5 ml-1 flex items-center gap-1 ${role === 'user' ? 'justify-end' : ''}">
                        <span>${timestamp}</span>
                        ${role === 'user' ? '<i data-lucide="check" class="w-3 h-3 text-blue-500"></i>' : ''}
                    </div>
                </div>`;

            chatMessages.appendChild(messageDiv);
            if (scroll) {
                chatMessages.scrollTop = chatMessages.scrollHeight;
            }
            lucide.createIcons();

            // Add smooth scrolling to the new message
            if (scroll) {
                setTimeout(() => {
                    messageDiv.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
                }, 10);
            }
        }

        // Append thinking indicator
        function appendThinking() {
            const id = 'thinking-indicator';
            // Remove existing thinking indicator if any
            const existing = document.getElementById(id);
            if (existing) existing.remove();

            const div = document.createElement('div');
            div.id = id;
            div.className = "max-w-3xl mx-auto flex gap-3 px-2 md:px-0 message-enter mb-2";
            div.innerHTML = `
                <div class="w-8 h-8 rounded-lg bg-pink-accent/12 border border-pink-accent/20 flex items-center justify-center flex-shrink-0">
                    <i data-lucide="brain" class="text-pink-accent w-4 h-4"></i>
                </div>
                <div class="message-content flex-1">
                    <div class="glass px-4 py-2.5 rounded-lg rounded-tl-none border border-white/8 message-bubble">
                        <div class="flex items-center gap-2 text-xs text-zinc-400">
                            <i data-lucide="loader-2" class="w-3 h-3 animate-spin"></i>
                            <span id="thinking-text">Thinking...</span>
                        </div>
                    </div>
                </div>`;

            chatMessages.appendChild(div);
            chatMessages.scrollTop = chatMessages.scrollHeight;
            lucide.createIcons();
            return id;
        }

        function removeThinking(id) {
            const el = document.getElementById(id);
            if (el) {
                el.classList.add('opacity-0', 'transition-opacity', 'duration-300');
                setTimeout(() => el.remove(), 300);
            }
        }

        // Update thinking text
        let thinkingTimeout = null;
        function updateThinking(text) {
            const thinkingText = document.getElementById('thinking-text');
            if (thinkingText) {
                // Subtle fade transition for text changes
                thinkingText.style.transition = 'opacity 0.2s ease-in-out';
                thinkingText.style.opacity = '0';
                setTimeout(() => {
                    thinkingText.textContent = text;
                    thinkingText.style.opacity = '1';
                }, 200);
            }
        }

        const clinicalSentences = [
            "Analyzing dermal patterns...",
            "Consulting clinical dermatology database...",
            "Scanning for skin condition matches...",
            "Evaluating active ingredient compatibility...",
            "Cross-referencing symptom clusters...",
            "Processing epidermal texture markers...",
            "Searching for evidence-based treatments...",
            "Synthesizing personalized skincare routine...",
            "Checking product safety profiles...",
            "Calculating skin-type specific solutions..."
        ];

        function startThinkingCycler() {
            const cycle = () => {
                // Variable delays for more realism (2.5s to 5s)
                const delay = Math.floor(Math.random() * 2500) + 2500;
                thinkingTimeout = setTimeout(() => {
                    const nextText = clinicalSentences[Math.floor(Math.random() * clinicalSentences.length)];
                    updateThinking(nextText);
                    cycle();
                }, delay);
            };

            updateThinking("Initializing clinical analysis...");
            cycle();
        }

        function stopThinkingCycler() {
            if (thinkingTimeout) {
                clearTimeout(thinkingTimeout);
                thinkingTimeout = null;
            }
        }

        function formatFileSize(bytes) {
            if (bytes === 0) return '0 Bytes';
            const k = 1024;
            const sizes = ['Bytes', 'KB', 'MB', 'GB'];
            const i = Math.floor(Math.log(bytes) / Math.log(k));
            return parseFloat((bytes / Math.pow(k, i)).toFixed(2)) + ' ' + sizes[i];
        }

        // Auto-focus the input on load
        messageInput.focus();
    });
</script>