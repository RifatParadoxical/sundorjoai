<script>
    lucide.createIcons();

    const reveals = document.querySelectorAll('.reveal');
    const revealOnScroll = () => {
        const windowHeight = window.innerHeight;
        reveals.forEach(reveal => {
            const elementTop = reveal.getBoundingClientRect().top;
            const elementVisible = 150;
            if (elementTop < windowHeight - elementVisible) {
                reveal.classList.add('active');
            }
        });
    };
    window.addEventListener('scroll', revealOnScroll);
    revealOnScroll();

    const nav = document.querySelector('nav');
    if (nav) {
        window.addEventListener('scroll', () => {
            if (window.scrollY > 50) {
                nav.classList.add('py-2');
                nav.classList.remove('py-4');
                nav.style.backgroundColor = 'rgba(20, 20, 23, 0.9)'; // Adjusted for glass effect consistency
            } else {
                nav.classList.remove('py-2');
                nav.classList.add('py-4');
                // nav.style.backgroundColor = 'transparent'; // Let class glass handle it
            }
        });
    }

    const slider = document.getElementById('progress-slider');
    if (slider) {
        const afterImg = slider.querySelector('.slider-after');
        const handle = slider.querySelector('.slider-handle');
        // const button = slider.querySelector('.slider-button'); // This was in template script but maybe not used or different class
        // Re-checking template script.. Ah: 
        // const button = slider.querySelector('.slider-button');
        // The HTML I wrote in comparison.ejs has slider-button.
        const button = slider.querySelector('.slider-button');

        const moveSlider = (e) => {
            const rect = slider.getBoundingClientRect();
            let x = ((e.pageX || e.touches[0].pageX) - rect.left) / rect.width * 100;
            x = Math.max(0, Math.min(100, x));

            if (afterImg) afterImg.style.width = `${x}%`;
            if (handle) handle.style.left = `${x}%`;
            if (button) button.style.left = `${x}%`;
        };

        slider.addEventListener('mousemove', moveSlider);
        slider.addEventListener('touchmove', moveSlider);
    }

    const feed = document.getElementById('activity-feed');
    if (feed) {
        const locations = ['London', 'New York', 'Dhaka', 'Paris', 'Tokyo', 'Berlin', 'Dubai', 'Sydney'];
        const types = ['New Analysis', 'Profile Created', 'Routine Updated', 'Expert Report Exported'];

        const createActivity = () => {
            if (feed.children.length > 7) feed.removeChild(feed.firstChild);

            const item = document.createElement('div');
            item.className = 'activity-item glass p-4 rounded-xl border border-white/5 flex items-center gap-3 animate-fade-in';

            const loc = locations[Math.floor(Math.random() * locations.length)];
            const type = types[Math.floor(Math.random() * types.length)];

            item.innerHTML = `
                <div class="w-2 h-2 rounded-full bg-pink-accent animate-pulse"></div>
                <div class="flex-1">
                    <p class="text-xs font-bold text-white">${type}</p>
                    <p class="text-[10px] text-zinc-500">${loc}, 1s ago</p>
                </div>
            `;
            feed.appendChild(item);
        };

        setInterval(createActivity, 3000);
        for (let i = 0; i < 4; i++) createActivity();
    }

    const activeScansComp = document.getElementById('active-scans-count');
    if (activeScansComp) {
        let count = 10242;
        setInterval(() => {
            count += Math.floor(Math.random() * 3);
            activeScansComp.innerText = count.toLocaleString();
        }, 2000);
    }

    // Interactive Button Effect
    document.querySelectorAll('button').forEach(button => {
        button.addEventListener('mousedown', () => {
            button.style.transform = 'scale(0.95)';
        });
        button.addEventListener('mouseup', () => {
            // Reset transform but keep hover effects if any
            button.style.transform = '';
        });
    });

    // Modal Logic
    const modal = document.getElementById('coming-soon-modal');
    const closeModalBtn = document.getElementById('close-modal');
    const modalX = document.getElementById('modal-x');
    const launchBtn = [...document.querySelectorAll('button')].find(b => b.innerText.includes('Launch AI Engine'));
    const executiveBtns = [...document.querySelectorAll('a')].filter(a => a.innerText.includes('Executive Summary') || a.innerText.includes('Investor Deck') || a.innerText.includes('Get Started') || a.innerText.includes('Try Free') || a.innerText.includes('Join Waitlist') || a.innerText.includes('Get Premium'));

    // In template: Executive Summary, Investor Deck, Try Free buttons trigger modal

    const openModal = (e) => {
        if (e) e.preventDefault();
        modal.classList.add('active');
    };

    const closeModal = () => {
        modal.classList.remove('active');
    };

    if (launchBtn) launchBtn.addEventListener('click', openModal);
    executiveBtns.forEach(btn => btn.addEventListener('click', openModal));

    // Also catch 'Get Started' and 'Get Premium' buttons if they are buttons not links
    const otherBtns = [...document.querySelectorAll('button')].filter(b => b.innerText.includes('Get Started') || b.innerText.includes('Get Premium') || b.innerText.includes('Try Free') || b.innerText.includes('Join Waitlist'));
    otherBtns.forEach(btn => btn.addEventListener('click', openModal));


    if (closeModalBtn) closeModalBtn.addEventListener('click', closeModal);
    if (modalX) modalX.addEventListener('click', closeModal);
    if (modal) window.addEventListener('click', (e) => {
        if (e.target === modal) closeModal();
    });

    setTimeout(() => {
        lucide.createIcons();
    }, 100);
</script>